{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Gross Tertiary Education Enrollment vs. GDP in 2023",
    "width": 600,
    "height": 450,
    "data": {
        "url": "world-data-2023 2.csv"
    },
    "params": [
        {
            "name": "LanguageSelect",
            "value": "All",
            "bind": {
                "input": "select",
                "options": ["All", "English", "Spanish", "Chinese", "Hindi", "Arabic", "Other"],
                "name": "Select Language"
            }
        }
    ],
    "transform": [
        {"filter": "datum['Gross tertiary education enrollment (%)'] != null && datum['GDP'] != null"},
        {"filter": "LanguageSelect == 'All' || indexof(datum['Official language'], LanguageSelect) >= 0"},
        {
            "calculate": "if(datum.GDP >= 1e9, round(datum.GDP / 1e9) + 'B', round(datum.GDP / 1e6) + 'M')",
            "as": "GDPTip"
        },
        {
            "calculate": "if(datum.Population >= 1e9, round(datum.Population / 1e9) + 'B', round(datum.Population / 1e6) + 'M')",
            "as": "PopulationTip"
        }
    ],
    "layer": [
        {    "selection": {
            "continent_highlight": {
            "type": "multi",
            "fields": ["Continent"],
            "bind": "legend"
            }
            },
            "mark": "circle",
            "encoding": {
                "x": {
                    "field": "GDP",
                    "type": "quantitative",
                    "title": "GDP (Log Scale)",
                    "scale": {"type": "log", "format": ".1s"}
                },
                "y": {
                    "field": "Gross tertiary education enrollment (%)",
                    "type": "quantitative",
                    "title": "Gross Tertiary Education Enrollment (%)"
                },
                "color": {
                    "field": "Country",
                    "type": "nominal",
                    "legend": null
                },
                "size": {
                    "field": "Population",
                    "scale": {"range": [40, 1400], "zero": false},
                    "type": "quantitative",
                    "legend": {"title": "Population"}
                },
                "color": {
                    "field": "Continent",
                    "type": "nominal",
                    "scale": {
                    "domain": [
                        "Africa",
                        "Europe",
                        "Oceania",
                        "Asia",
                        "South America",
                        "North America"
                      ]
                      ,
                    "range": [
                        "#377eb8",
                        "#ff7f00",
                        "#a65628",
                        "#e41a1c",
                        "#984ea3",
                        "#33a02c"
                      ]
                    }
                    },
                "opacity": {
                    "condition": {"selection": "continent_highlight", "value": 0.6},
                    "value": 0.2
                        },
                "tooltip": [
                    {"field": "Country", "type": "nominal"},
                    {"field": "Gross tertiary education enrollment (%)", "type": "quantitative", "title": "Gross Tertiary Education Enrollment (%)"},
                    {"field": "GDPTip", "type": "nominal", "title": "GDP"},
                    {"field": "PopulationTip", "type": "nominal", "title": "Population"}
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "baseline": "middle",
                "dx": 10
            },
            "transform": [
                {
                    "filter": "indexof(['Australia', 'Malaysia'], datum.Country) >= 0"
                }
            ],
            "encoding": {
                "x": {
                    "field": "GDP",
                    "type": "quantitative"
                },
                "y": {
                    "field": "Gross tertiary education enrollment (%)",
                    "type": "quantitative"
                },
                "text": {"field": "Country", "type": "nominal"}
            }
        }
    ]
}
