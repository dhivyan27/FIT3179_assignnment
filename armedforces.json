{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "title": "Top 10 Countries with the Highest Armed Forces in 2023",
    "data": {
        "url": "world-data-2023 2.csv"
    },
    "transform": [
        {
            "window": [
                {"op": "dense_rank", "as": "rank", "field": "Armed Forces size"}
            ],
            "sort": [{"field": "Armed Forces size", "order": "descending"}]
        },
        {
            "filter": "datum.rank <= 10"
        }
    ],
    "mark": "bar",
    "encoding": {
        "y": {
            "field": "Country",
            "type": "ordinal",
            "title": "Country",
            "sort": "-x"
        },
        "x": {
            "field": "Armed Forces size",
            "type": "quantitative",
            "title": "Armed Forces Size",
            "scale": {"type": "linear", "domain": [0, 1000000]}
        },
        "color": {
            "field": "Country",
            "type": "nominal",
            "legend": null,
            "scale": {
                "scheme": "tableau10"
            }
        },
        "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Armed Forces size", "type": "quantitative"}
        ]
    }
}
